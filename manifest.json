{

  "description": "Downloads identified links' targets",
  "manifest_version": 2,
  "name": "ffx-download-all",
  "version": "1.0",
  "homepage_url": "https://github.com/devtom30/ffx-download-all",
  "icons": {
    "48": "icons/beasts-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "theme_icons": [{
        "light": "icons/beasts-32-light.png",
        "dark": "icons/beasts-32.png",
        "size": 32
    }],
    "default_title": "ffx-download-all",
    "default_popup": "popup/menu.html"
  },

  "web_accessible_resources": [
    "beasts/*.jpg"
  ]

}
